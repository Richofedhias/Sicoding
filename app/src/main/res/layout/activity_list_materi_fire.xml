<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".materi.Firebase.ListMateriFireActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs_materi_fire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:tabBackground="@color/colorBlueberry"
        app:tabIndicatorColor="@color/colorWhite"
        tools:layout_editor_absoluteX="8dp"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager_Materi_fire"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabs_materi_fire" />

</androidx.constraintlayout.widget.ConstraintLayout>